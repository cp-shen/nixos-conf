; --- color setting ---

[colors]
black    = #1e2127
red      = #e06c75
green    = #98c379
yellow   = #d19a66
blue     = #61afef
magenta  = #c678dd
cyan     = #56b6c2
white    = #abb2bf
lowWhite = #828791
brightWhite = #e6efff

; --- bar setting ---

[bar/mybar]
height = 2%
width = 100%
radius = 0

modules-left = workspace_list
modules-center = window_title
modules-right = pulseaudio cpu memory filesystem date
tray-position = right
override-redirect = true
enable-ipc = true
separator = "|"
module-margin = 2

background = ${colors.black}
foreground = ${colors.white}

font-0 = "Ubuntu:pixelsize=12;0"
font-1 = "Noto Sans CJK SC:pixelsize=12;0"
font-2 = "Noto Color Emoji:scale=10:size=12;0"

; --- left widgets ---

[module/workspace_list]
type = internal/xworkspaces
reverse-scroll = true
label-active-foreground = ${colors.blue}
label-occupied-foreground = ${colors.brightWhite}
label-empty-foreground = ${colors.lowWhite}

; --- center widgets ---

[module/window_title]
type = internal/xwindow

; --- right widgets ---

[module/cpu]
type = internal/cpu
interval = 2
label = CPU:%percentage%%

[module/memory]
type = internal/memory
interval = 2
label = RAM:%gb_used%/%gb_total%

[module/pulseaudio]
type = internal/pulseaudio
label-volume = VOL:%percentage%%
label-muted = VOL:ðŸ”‡
label-muted-foreground = ${colors.red}

[module/date]
type = internal/date
date = %y-%m-%d
time = %H:%M
interval = 10
label = %date% %time%
label-foreground = ${colors.blue}

[module/filesystem]
type = internal/fs
mount-0 = /
; mount-1 = /qqww
interval = 10
label-mounted = ( %mountpoint% ) %used%/%total%
label-unmounted = ( %mountpoint% ) not mounted
label-unmounted-foreground = ${colors.red}
